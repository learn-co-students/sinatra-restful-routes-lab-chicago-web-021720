<h1>Edit Recipe: <%= @recipe.name %></h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    
    <label for="name">Name: </label>
    <input type="text" id="name" name="name" value="<%= @recipe.name %>"><br>
    
    <label for="ingredients">Ingredients: </label>
    <input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>"><br>
    
    <label for="cook_time">Cooke Time: </label>
    <input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>"><br><br>
    
    <input type="submit" id="submit">
</form>
